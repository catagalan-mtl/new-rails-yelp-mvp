<h1>List of All Restaurants</h1>

<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= restaurant.category.capitalize %></li>
  <% end %>
</ul>
<div>
  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %>
</div>
